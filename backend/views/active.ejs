<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%=title%></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body class="bg-blue-50/80">
    <div class="border-b border-indigo-100">
      <nav
        class="max-w-4xl mx-auto px-3 md:px-0 flex justify-between items-start sm:items-center"
      >
        <img src="/images/logo.png" class="-ml-2 h-10 mt-2 aspect-video" />

        <div
          class="flex items-center overflow-y-hidden overflow-x-auto w-full justify-center flex-1"
        >
          <a
            href="/admin"
            class="text-sm font-medium text-neutral-800 border-b-4 border-blue-500 px-3 py-5 -my-0.5 rounded-sm hover:text-blue-900 hover:bg-blue-200"
            >Formations</a
          >
          <a
            href="/admin/teachers"
            class="text-sm font-medium text-neutral-800 px-3 py-5 -my-0.5 rounded-sm hover:text-blue-900 hover:bg-blue-200"
            >Enseignants</a
          >
          <a
            href="/admin/salles"
            class="text-sm font-medium text-neutral-800 px-3 py-5 -my-0.5 rounded-sm hover:text-blue-900 hover:bg-blue-200"
            >Salles</a
          >
        </div>
      </nav>
    </div>
    <div class="pb-4 mt-8">
      <div class="max-w-4xl mx-auto">
        <main class="mt-3 md:mt-8">
          <div
            class="flex px-3 md:px-0 text-center md:space-y-0 items-end justify-between"
          >
            <h1
              class="text-xl leading-normal text-center md:text-left text font-bold"
            >
              <span class="text-blue-900"
                ><span class="opacity-80">#</span> <%=title%></span
              >
            </h1>
            <div>
              <a
                href="<%=id%>/archive"
                class="inline-block border border-red-200 md:border-red-300 shadow-md shadow-red-100 max-w-xs mx-auto md:mx-0 text-red-400 md:text-red-600 px-6 py-1 rounded-sm text-sm hover:bg-red-100"
              >
                Archiver
              </a>
            </div>
          </div>
          <div
            class="mt-2 flex py-4 justify-center items-center space-x-12 md:space-x-40"
          >
            <div class="flex space-x-2 items-center text-sm">
              <img src="/images/profile.png" class="w-12 opacity-50" />
              <h2>
                Ensigner par <br /><span class="font-bold text-xs"
                  ><%=teachers%></span
                >
              </h2>
            </div>

            <div class="flex space-x-2 items-center text-sm">
              <img src="/images/ensignant.png" class="w-12 p-1 opacity-50" />
              <h2>
                Etudie par <br /><span class="font-bold"
                  ><%=totalStudents%> apprenant</span
                >
              </h2>
            </div>
          </div>

          <div class="mt-4 w-full px-2 md:px-0">
            <h3 class="text-slate-600 text-sm font-semibold">Les groups</h3>
            <div class="grid mt-2 grid-cols-1 md:grid-cols-3 gap-3">
              <% groups.forEach(function(g){%>

              <div class="bg-white shadow-md rounded-sm">
                <div class="flex items-center justify-center aspect-video">
                  <span class="text-6xl text-slate-700 font-bold"
                    ><%=g.title%></span
                  >
                </div>
                <div class="flex items-center border-t border-slate-200">
                  <a class="flex-1 hover:bg-slate-200 text-center py-2" href="#"
                    >Attestation</a
                  >
                  <a
                    class="flex-1 hover:bg-slate-200 text-center py-2 border-l border-slate-200"
                    href="<%=id%>/presence/<%=g.id%>"
                    >Presence</a
                  >
                </div>
              </div>

              <%})%>
            </div>
          </div>
        </main>
      </div>
    </div>
  </body>
</html>
